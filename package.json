    "autoprefixer": "^9.8.6",
    "postcss-cli": "^8.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.3",
    "tailwindcss": "^1.8.10",
    "typescript": "~3.7.2"
